# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=formai
DB_USERNAME=formai_user
DB_PASSWORD=formai_password

# Database Connection Pool Settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Database Connection Settings
DB_CONNECT_TIMEOUT=10
DB_STATEMENT_TIMEOUT=30000
DB_ECHO=false

# Flask Configuration
FLASK_DEBUG=false
FLASK_SECRET_KEY=your-secret-key-here

# Application Settings
PROFILES_DIR=profiles
MAPPINGS_DIR=saved_urls
LOG_LEVEL=INFO

# Firecrawl API Configuration
FIRECRAWL_API_KEY=your-firecrawl-api-key-here

# Optional: Firecrawl API endpoint (defaults to https://api.firecrawl.dev)
# FIRECRAWL_API_URL=https://api.firecrawl.dev

# Optional: Enable/disable Firecrawl integration (defaults to true if API key is set)
# FIRECRAWL_ENABLED=true

# OpenRouter API Configuration
OPENROUTER_API_KEY=your-openrouter-api-key-here

# Optional: OpenRouter API endpoint (defaults to https://openrouter.ai/api/v1)
# OPENROUTER_API_URL=https://openrouter.ai/api/v1