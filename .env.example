# FormAI Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# AI / LLM Configuration
# =============================================================================

# Ollama (local LLM) - default is localhost
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3.2

# Groq API (optional, for cloud LLM)
GROQ_API_KEY=

# =============================================================================
# CAPTCHA Solving
# =============================================================================

# 2Captcha API key for automated CAPTCHA solving
# Get your key at: https://2captcha.com
TWOCAPTCHA_API_KEY=

# =============================================================================
# Server Configuration
# =============================================================================

# Mode: "web" for server, "worker" for background worker
MODE=web

# Redis URL for job queue (optional)
REDIS_URL=redis://localhost:6379

# =============================================================================
# Paths (Docker/Production)
# =============================================================================

# Override default paths if needed
# PROFILES_DIR=/app/profiles
# RECORDINGS_DIR=/app/recordings
# DOWNLOADS_DIR=/app/downloads

# =============================================================================
# Advanced Options
# =============================================================================

# Disable device scanning (for headless/Docker environments)
# DISABLE_SCAN_DEVICES=true

# Custom update server URL
# FORMAI_UPDATE_SERVER=https://raw.githubusercontent.com/skstgu8080/formai/main
